<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="412.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chess.gui.settings.SettingsController">
   <children>
      <HBox prefHeight="98.0" prefWidth="600.0">
         <children>
            <Label contentDisplay="CENTER" text="{settings-title}">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <CheckBox mnemonicParsing="false" text="{sett:flip-chessboard}" />
            <CheckBox mnemonicParsing="false" text="{sett:one-touch-rule}" />
            <CheckBox mnemonicParsing="false" text="{sett:show-in-check-hint}" />
            <CheckBox mnemonicParsing="false" text="{sett:show-possible-moves}" />
            <Label text="{sett:choose-language}" />
            <ChoiceBox prefHeight="24.0" prefWidth="259.0">
               <VBox.margin>
                  <Insets left="25.0" right="10.0" top="-10.0" />
               </VBox.margin>
            </ChoiceBox>
         </children>
         <VBox.margin>
            <Insets left="25.0" right="25.0" />
         </VBox.margin>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
      <Pane prefHeight="88.0" prefWidth="600.0" />
      <HBox prefHeight="74.0" prefWidth="600.0" spacing="10.0">
         <children>
            <BorderPane prefHeight="62.0" prefWidth="360.0" />
            <Button cancelButton="true" mnemonicParsing="false" text="{diag:cancel}" />
            <Button fx:id="btnSettingsSave" defaultButton="true" mnemonicParsing="false" onAction="#handleBtnSaveOnAction" text="{diag:ok}" />
         </children>
         <padding>
            <Insets right="15.0" />
         </padding>
      </HBox>
   </children>
</VBox>
